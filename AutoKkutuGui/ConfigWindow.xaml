                            <CheckBox Name="LogChatting" Grid.Row="0" Grid.Column="0" Content="채팅 입력 로그 작성" IsChecked="False" Style="{StaticResource SettingCheckBoxStyle}" ToolTip="채팅 입력 로그를 작성하여 ChatLog.log 파일에 저장합니다." />
