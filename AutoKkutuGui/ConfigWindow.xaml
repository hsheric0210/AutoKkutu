                            <Separator Grid.Row="0" Grid.Column="1" Style="{StaticResource SettingSeparatorStyle}" />
                            <Label Grid.Row="0" Grid.Column="2" Content="{Binding ElementName=SelfAntiCheat, Path=ToolTip}" Style="{StaticResource SettingLabelStyle}" />
