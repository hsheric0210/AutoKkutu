<Window x:Class="AutoKkutuGui.ConfigWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:AutoKkutuGui" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" Title="Configuration" Width="Auto" MinHeight="400" FontFamily="NanumBarunGothic" FontSize="14" ResizeMode="CanResizeWithGrip" SizeToContent="WidthAndHeight" mc:Ignorable="d">
    <Window.Resources>
        <Style x:Key="SettingCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Margin" Value="5,5,5,0" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Foreground" Value="#FFFFFFFF" />
        </Style>
        <Style x:Key="SettingRadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Margin" Value="5,5,5,0" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Foreground" Value="#FFFFFFFF" />
        </Style>
        <Style x:Key="SettingSeparatorStyle" BasedOn="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" TargetType="Separator">
            <Setter Property="Margin" Value="5,0,5,0" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style x:Key="SettingBaseTextBoxStyle" TargetType="TextBox">
            <Setter Property="Margin" Value="5,0,5,0" />
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
            <Setter Property="Background" Value="#333337" />
            <Setter Property="Foreground" Value="#FFFFFFFF" />
        </Style>
        <Style x:Key="SettingTextBoxStyle" BasedOn="{StaticResource SettingBaseTextBoxStyle}" TargetType="TextBox">
            <Setter Property="Margin" Value="5,0,25,0" />
        </Style>
        <Style x:Key="SettingLabelStyle" TargetType="Label">
            <Setter Property="Margin" Value="5,5,10,0" />
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="#FFBDBDBD" />
        </Style>
        <Style x:Key="SettingTextBlockStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="#FFFFFFFF" />
        </Style>
        <Style x:Key="SettingButtonStyle" TargetType="Button">
            <Setter Property="MinWidth" Value="100" />
            <Setter Property="MinHeight" Value="20" />
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="VerticalAlignment" Value="Bottom" />
            <Setter Property="FontSize" Value="14" />
        </Style>
        <Style x:Key="SettingExpanderStyle" TargetType="Expander">
            <Setter Property="Margin" Value="0,0,0,5" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="IsExpanded" Value="False" />
            <Setter Property="ExpandDirection" Value="Down" />
            <Setter Property="Foreground" Value="#FFFFFFFF" />
        </Style>
        <Style x:Key="CPGridStyle" TargetType="Grid">
            <Setter Property="Margin" Value="5" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Background" Value="#FF333337" />
        </Style>
        <Style x:Key="CPTextLabelStyle" TargetType="Label">
            <Setter Property="Margin" Value="5,5,0,0" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="Foreground" Value="#FFFFFFFF" />
        </Style>
        <Style x:Key="CPPickerStyle" TargetType="xctk:ColorPicker">
            <Setter Property="MinWidth" Value="160" />
            <Setter Property="Margin" Value="10,40,10,10" />
            <Setter Property="ColorMode" Value="ColorPalette" />
            <Setter Property="SelectedColor" Value="White" />
        </Style>
        <local:DelayToStringConverter x:Key="DelayToStringConverter" />
        <local:DelayToCharPerSecondConverter x:Key="DelayToCharPerSecondConverter" />
        <local:DelayToCharPerMinuteConverter x:Key="DelayToCharPerMinuteConverter" />
    </Window.Resources>
    <Grid Background="#252526" UseLayoutRounding="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TabControl Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="15,15,15,15" Background="#FF333337" UseLayoutRounding="True">
            <TabItem Header="단어 검색">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <CheckBox Name="OnlySearchOnMyTurn" Grid.Row="0" Grid.Column="0" Content="내 턴에만 단어 검색 수행" IsChecked="True" Style="{StaticResource SettingCheckBoxStyle}" ToolTip="오로지 내 턴에만 단어 검색을 수행합니다." />
                        <Separator Grid.Row="0" Grid.Column="1" Style="{StaticResource SettingSeparatorStyle}" />
                        <Label Grid.Row="0" Grid.Column="2" Content="{Binding ElementName=OnlySearchOnMyTurn, Path=ToolTip}" Style="{StaticResource SettingLabelStyle}" ToolTip="비활성화 시 다른 사람의 턴에도 단어를 검색합니다" />
                    </Grid>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <CheckBox Name="AttackWord" Grid.Row="0" Grid.Column="0" Content="공격 단어 사용" IsChecked="True" Style="{StaticResource SettingCheckBoxStyle}" ToolTip="'-즈, -슘, -갹'과 같은 공격 단어들을 사용합니다." />
                        <Separator Grid.Row="0" Grid.Column="1" Style="{StaticResource SettingSeparatorStyle}" />
                        <Label Grid.Row="0" Grid.Column="2" Content="{Binding ElementName=AttackWord, Path=ToolTip}" Style="{StaticResource SettingLabelStyle}" />
                    </Grid>
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <CheckBox Name="EndWord" Grid.Row="0" Grid.Column="0" Content="한방 단어 사용" Style="{StaticResource SettingCheckBoxStyle}" ToolTip="'-듐, -긶, -낏'과 같은 한방 단어들을 사용합니다." />
                        <Separator Grid.Row="0" Grid.Column="1" Style="{StaticResource SettingSeparatorStyle}" />
                        <Label Grid.Row="0" Grid.Column="2" Content="{Binding ElementName=EndWord, Path=ToolTip}" Style="{StaticResource SettingLabelStyle}" />
                    </Grid>
                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <CheckBox Name="ReturnMode" Grid.Row="0" Grid.Column="0" Content="리턴" Style="{StaticResource SettingCheckBoxStyle}" ToolTip="이미 사용했던 단어를 다시 사용할 수 있게 합니다." />
                        <Separator Grid.Row="0" Grid.Column="1" Style="{StaticResource SettingSeparatorStyle}" />
                        <Label Grid.Row="0" Grid.Column="2" Content="{Binding ElementName=ReturnMode, Path=ToolTip}" Style="{StaticResource SettingLabelStyle}" />
                    </Grid>
                    <Grid Grid.Row="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <CheckBox Name="MissionDetection" Grid.Row="0" Grid.Column="0" Content="미션 감지 및 단어 선호도 조정" IsChecked="True" Style="{StaticResource SettingCheckBoxStyle}" ToolTip="미션 글자를 감지했을 경우, 해당 글자가 많이 존재하는 단어들 위주로 추천 단어들을 재배열합니다." />
                        <Separator Grid.Row="0" Grid.Column="1" MinWidth="20" Style="{StaticResource SettingSeparatorStyle}" />
                        <Label Grid.Row="0" Grid.Column="2" Content="{Binding ElementName=MissionDetection, Path=ToolTip}" Style="{StaticResource SettingLabelStyle}" />

                    </Grid>
                    <Grid Grid.Row="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBox Name="MaxWordCount" Grid.Row="0" Grid.RowSpan="1" Grid.Column="0" MinWidth="80" MinHeight="25" Style="{StaticResource SettingTextBoxStyle}" Text="20" ToolTip="추천 단어 목록에 출력되는 단어의 최대 갯수를 조정합니다." />
                        <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource SettingTextBlockStyle}" Text="개" />
                        <Separator Grid.Row="0" Grid.Column="1" Style="{StaticResource SettingSeparatorStyle}" />
                        <Label Grid.Row="0" Grid.Column="2" Content="{Binding ElementName=MaxWordCount, Path=ToolTip}" Style="{StaticResource SettingLabelStyle}" />
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="단어 우선 순위">
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Margin="0,5,0,0" HorizontalAlignment="Center" Content="비활성화된 노드" Foreground="#FFBDBDBD" />
                    <ListBox x:Name="InactivePreferences" Grid.Row="1" Grid.Column="0" MinWidth="120" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="#FF282828" BorderBrush="{x:Null}" BorderThickness="1" Foreground="#FFFFFFFF" />
                    <StackPanel Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" VerticalAlignment="Center" Orientation="Vertical">
                        <Button Name="ActivatePreferenceButton" Margin="5,5,5,5" Padding="10,0,10,0" Content="활성화" />
                        <Button Name="DeactivatePreferenceButton" Margin="5,5,5,5" Padding="10,0,10,0" Content="비활성화" />
                    </StackPanel>
                    <Label Grid.Row="0" Grid.Column="2" Margin="0,5,0,0" HorizontalAlignment="Center" Content="활성화된 노드" Foreground="#FFBDBDBD" />
                    <ListBox x:Name="ActivePreferences" Grid.Row="1" Grid.Column="2" MinWidth="120" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="#FF282828" BorderBrush="{x:Null}" BorderThickness="1" FontFamily="NanumGothic" FontSize="14" Foreground="#FFFFFFFF" />
                    <StackPanel Grid.Row="1" Grid.RowSpan="2" Grid.Column="3" VerticalAlignment="Top" Orientation="Vertical">
                        <Button Name="MoveUpPreferenceButton" Margin="5,5,5,5" Padding="10,0,10,0" Content="위로 이동" />
                        <Button Name="MoveDownPreferenceButton" Margin="5,5,5,5" Padding="10,0,10,0" Content="아래로 이동" />
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="단어 자동 입력">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <CheckBox Name="AutoEnter" Grid.Row="0" Grid.Column="0" Content="자동 단어 입력 활성화" IsChecked="True" Style="{StaticResource SettingCheckBoxStyle}" ToolTip="자동으로 가장 적절한 단어를 선택하여 입력합니다." />
                        <Separator Grid.Row="0" Grid.Column="1" Style="{StaticResource SettingSeparatorStyle}" />
                        <Label Grid.Row="0" Grid.Column="2" Content="{Binding ElementName=AutoEnter, Path=ToolTip}" Style="{StaticResource SettingLabelStyle}" />
                    </Grid>
                    <Grid Grid.Row="1" Margin="20,0,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Expander Grid.Row="0" Header="자동 입력 딜레이" Style="{StaticResource SettingExpanderStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <CheckBox Name="Delay" Grid.Row="0" Grid.Column="0" Content="딜레이" IsChecked="True" Style="{StaticResource SettingCheckBoxStyle}" ToolTip="단어를 입력하기 전에 의도적인 지연을 둡니다." />
                                    <Separator Grid.Row="0" Grid.Column="1" Style="{StaticResource SettingSeparatorStyle}" />
                                    <Label Grid.Row="0" Grid.Column="2" Content="{Binding ElementName=Delay, Path=ToolTip}" Style="{StaticResource SettingLabelStyle}" />
                                </Grid>
                                <Grid Grid.Row="1" Margin="20,0,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Style="{StaticResource SettingTextBlockStyle}" Text="입력 시작 딜레이" />
                                    <Separator Grid.Column="1" Style="{StaticResource SettingSeparatorStyle}" />
                                    <TextBox Name="StartDelayNumber" Grid.Column="2" MinWidth="80" MinHeight="25" Style="{StaticResource SettingTextBoxStyle}" Text="10" ToolTip="단어 입력 시작 지연(밀리초 단위)입니다." />
                                    <TextBlock Grid.Column="2" Style="{StaticResource SettingTextBlockStyle}" Text="ms" />
                                    <Separator Grid.Column="3" Style="{StaticResource SettingSeparatorStyle}" />
                                    <Label Grid.Column="4" Content="{Binding ElementName=StartDelayNumber, Path=ToolTip}" Style="{StaticResource SettingLabelStyle}" />
                                </Grid>
                                <Grid Grid.Row="2" Margin="40,0,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Style="{StaticResource SettingTextBlockStyle}" Text="랜덤" />
                                    <Separator Grid.Column="1" Style="{StaticResource SettingSeparatorStyle}" />
                                    <TextBox Name="StartDelayRandomNumber" Grid.Column="2" MinWidth="80" MinHeight="25" Style="{StaticResource SettingTextBoxStyle}" Text="10" ToolTip="단어 입력 시작 지연 랜덤 비율 (% 단위)." />
                                    <TextBlock Grid.Column="2" Style="{StaticResource SettingTextBlockStyle}" Text="%" />
                                    <Separator Grid.Column="3" Style="{StaticResource SettingSeparatorStyle}" />
                                    <Label Grid.Column="4" Style="{StaticResource SettingLabelStyle}">
                                        <Label.Content>
                                            <MultiBinding Converter="{StaticResource DelayToStringConverter}" ConverterParameter="시작 딜레이 {0}-{1}ms">
                                                <Binding ElementName="StartDelayNumber" Mode="OneWay" Path="Text" />
                                                <Binding ElementName="StartDelayRandomNumber" Mode="OneWay" Path="Text" />
                                            </MultiBinding>
                                        </Label.Content>
                                    </Label>
                                    <Separator Grid.Column="5" Style="{StaticResource SettingSeparatorStyle}" />
                                    <Label Grid.Column="6" Content="{Binding ElementName=StartDelayRandomNumber, Path=ToolTip}" Style="{StaticResource SettingLabelStyle}" />
                                </Grid>
                                <Grid Grid.Row="3" Margin="20,0,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Style="{StaticResource SettingTextBlockStyle}" Text="글자 당 딜레이" />
                                    <Separator Grid.Column="1" Style="{StaticResource SettingSeparatorStyle}" />
                                    <TextBox Name="DelayPerCharNumber" Grid.Column="2" MinWidth="80" MinHeight="25" Style="{StaticResource SettingTextBoxStyle}" Text="10" ToolTip="단어 한 글자 당 입력 지연 시간(밀리초 단위)입니다." />
                                    <TextBlock Grid.Column="2" Style="{StaticResource SettingTextBlockStyle}" Text="ms" />
                                    <Separator Grid.Column="3" Style="{StaticResource SettingSeparatorStyle}" />
                                    <Label Grid.Column="4" Content="{Binding ElementName=DelayPerCharNumber, Path=ToolTip}" Style="{StaticResource SettingLabelStyle}" />
                                </Grid>
                                <Grid Grid.Row="4" Margin="40,0,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Style="{StaticResource SettingTextBlockStyle}" Text="랜덤" />
                                    <Separator Grid.Column="1" Style="{StaticResource SettingSeparatorStyle}" />
                                    <TextBox Name="DelayPerCharRandomNumber" Grid.Column="2" MinWidth="80" MinHeight="25" Style="{StaticResource SettingTextBoxStyle}" Text="10" ToolTip="단어 한 글자 당 입력 지연 시간 랜덤 비율 (% 단위)." />
                                    <TextBlock Grid.Column="2" Style="{StaticResource SettingTextBlockStyle}" Text="%" />
                                    <Separator Grid.Column="3" Style="{StaticResource SettingSeparatorStyle}" />
                                    <Label Grid.Column="4" Content="{Binding ElementName=DelayPerCharRandomNumber, Path=ToolTip}" Style="{StaticResource SettingLabelStyle}" />
                                </Grid>
                                <Grid Grid.Row="5" Margin="50,0,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Column="0" Style="{StaticResource SettingLabelStyle}">
                                        <Label.Content>
                                            <MultiBinding Converter="{StaticResource DelayToStringConverter}" ConverterParameter="글자 간 딜레이 {0}-{1}ms">
                                                <Binding ElementName="DelayPerCharNumber" Mode="OneWay" Path="Text" />
                                                <Binding ElementName="DelayPerCharRandomNumber" Mode="OneWay" Path="Text" />
                                            </MultiBinding>
                                        </Label.Content>
                                    </Label>
                                    <Separator Grid.Column="1" Style="{StaticResource SettingSeparatorStyle}" />
                                    <Label Grid.Column="2" Style="{StaticResource SettingLabelStyle}">
                                        <Label.Content>
                                            <MultiBinding Converter="{StaticResource DelayToCharPerSecondConverter}" ConverterParameter="초당 {0}-{1}타">
                                                <Binding ElementName="DelayPerCharNumber" Mode="OneWay" Path="Text" />
                                                <Binding ElementName="DelayPerCharRandomNumber" Mode="OneWay" Path="Text" />
                                            </MultiBinding>
                                        </Label.Content>
                                    </Label>
                                    <Separator Grid.Column="3" Style="{StaticResource SettingSeparatorStyle}" />
                                    <Label Grid.Column="4" Style="{StaticResource SettingLabelStyle}">
                                        <Label.Content>
                                            <MultiBinding Converter="{StaticResource DelayToCharPerMinuteConverter}" ConverterParameter="분당 {0}-{1}타">
                                                <Binding ElementName="DelayPerCharNumber" Mode="OneWay" Path="Text" />
                                                <Binding ElementName="DelayPerCharRandomNumber" Mode="OneWay" Path="Text" />
                                            </MultiBinding>
                                        </Label.Content>
                                    </Label>
                                </Grid>
                            </Grid>
                        </Expander>
                        <Grid Grid.Row="3" Margin="20,0,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <RadioButton Name="AutoEnterInstant" Grid.Column="0" Content="우회 미사용" GroupName="InputSimulateBypass" Style="{StaticResource SettingRadioButtonStyle}" ToolTip="입력 시뮬레이션을 사용하지 않고, 모든 내용을 즉시 입력합니다." />
                                    <Separator Grid.Column="1" Margin="5,0,5,0" Style="{StaticResource SettingSeparatorStyle}" />
                                    <Label Grid.Column="3" Content="{Binding ElementName=AutoEnterInstant, Path=ToolTip}" Style="{StaticResource SettingLabelStyle}" />
                                </Grid>
                                <Grid Grid.Row="1" Margin="30,0,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <CheckBox Name="DelayStartAfterWordEnter" Grid.Column="0" Content="단어 입력 후부터 시작" IsChecked="False" Style="{StaticResource SettingCheckBoxStyle}" ToolTip="딜레이의 시작 지점을 내 턴의 시작 시간이 아닌, 이전 단어의 입력의 끝 시간으로 합니다." />
                                    <Separator Grid.Column="1" Style="{StaticResource SettingSeparatorStyle}" />
                                    <Label Grid.Column="2" Content="{Binding ElementName=DelayStartAfterWordEnter, Path=ToolTip}" Style="{StaticResource SettingLabelStyle}" ToolTip="예시로 딜레이가 800ms이고 마지막 단어를 친 후 다음 내 턴이 500ms 후에 왔다면 마지막 단어를 친 지 이미 500ms가 지났기에 300ms만 대기 후 단어를 입력합니다." />
                                </Grid>
                            </Grid>
                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <RadioButton Name="AutoEnterInputSimulateJavaScript" Grid.Column="0" Content="입력 시뮬레이션, JavaScript 기반" GroupName="InputSimulateBypass" IsChecked="True" Style="{StaticResource SettingRadioButtonStyle}" ToolTip="JavaScript를 기반으로 입력 시뮬레이션을 수행합니다." />
