<Window x:Class="AutoKkutu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:local="clr-namespace:AutoKkutu"
        xmlns:cefSharp="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
        Title="주 창" Height="450" Width="800" Background="Black">
	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="25"/>
			<RowDefinition/>
			<RowDefinition Height="20"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="40"/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<AccessText Text="사이트 주소" Foreground="White" FontSize="6" HorizontalAlignment="Right" VerticalAlignment="Center" Height="10" Width="37"/>
		<TextBox Name="AddressBar" Grid.Column="1" VerticalAlignment="Center" Height="18"/>
		<cefSharp:ChromiumWebBrowser Name="Cef" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" Margin="0,10,0,10"/>
		<AccessText Text="입력란" Grid.Row="2" Grid.Column="0" Foreground="White" FontSize="8" HorizontalAlignment="Right" VerticalAlignment="Center" Height="10" Width="24" Margin="0,0,5,0"/>
		<TextBox Name="InputBar"  Grid.Row="2"  Grid.Column="1" Margin="0,0,0,1"/>
	</Grid>
</Window>
