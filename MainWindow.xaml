<Window
	x:Class="AutoKkutu.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="MainWindow"
	Height="920"
	Width="1600"
	ResizeMode="NoResize">
	<Grid
		UseLayoutRounding="True">
		<Grid
			Name="LoadOverlay"
			Background="#FFFFFFFF"
			Visibility="Hidden"
			ZIndex="1000">
		</Grid>
		<Grid
			UseLayoutRounding="True">
			<Grid.RowDefinitions>
				<RowDefinition
					Height="865" />
				<RowDefinition
					Height="35" />
			</Grid.RowDefinitions>
			<Grid
				Name="ContentGrid"
				Row="0"
				UseLayoutRounding="True">
				<Grid.RowDefinitions>
					<RowDefinition
						Height="810" />
					<RowDefinition
						Height="55" />
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition
						Width="1350" />
					<ColumnDefinition
						Width="250" />
				</Grid.ColumnDefinitions>
				<Grid
					Row="0"
					Column="0"
					Width="1350"
					Height="20"
					Background="#FF333337"
					Margin="0,0,0,790"
					ZIndex="100" />
				<ContentControl
					Name="browserContainer"
					Grid.Row="0"
					Grid.Column="0"
					Content="browserContainer"
					Width="1350"
					RenderOptions.BitmapScalingMode="NearestNeighbor"
					UseLayoutRounding="True"
					Margin="0,19,0,0" />
				<Grid
					Name="ControlPanel"
					Row="0"
					Column="1"
					Background="#252526">
					<Grid
						Background="#FF333337"
						Margin="0,0,0,790" />
					<Label
						Content="추천 단어"
						Foreground="#FFFFFFFF"
						FontFamily="/AutoKkutu;component/Resources/Font/#NanumBarunGothic"
						FontSize="20"
						Margin="7,31,41,745" />
					<ListBox
						Name="PathList"
						Background="#FF333337"
						Margin="0,71,4,443"
						BorderThickness="1"
						BorderBrush="{x:Null}"
						MouseDoubleClick="PathList_MouseDoubleClick">
						<ItemsControl.ItemTemplate>
							<DataTemplate>
								<StackPanel
									Orientation="Horizontal"
									ScrollViewer.VerticalScrollBarVisibility="Hidden"
									ScrollViewer.HorizontalScrollBarVisibility="Auto"
									Width="185"
									ToolTip="{Binding ToolTip}">
									<Image
										Width="25"
										Height="25"
										RenderOptions.BitmapScalingMode="HighQuality"
										Margin="5,5,5,5"
										Source="{Binding Image}" />
									<Border
										Height="35"
										Width="150"
										VerticalAlignment="Center"
										BorderBrush="{x:Null}">
										<TextBlock
											Foreground="#FFFFFFFF"
											FontFamily="NanumGothic"
											FontSize="11"
											ScrollViewer.VerticalScrollBarVisibility="Disabled"
											TextWrapping="Wrap"
											TextTrimming="CharacterEllipsis"
											VerticalAlignment="Center"
											HorizontalAlignment="Left"
											Text="{Binding Title}" />
									</Border>
								</StackPanel>
							</DataTemplate>
						</ItemsControl.ItemTemplate>
					</ListBox>
					<Grid
						Name="SearchStatus"
						Margin="0,366,4,397"
						Background="#FF444444">
						<Border
							Height="50"
							Margin="43,0,0,-3"
							HorizontalAlignment="Left"
							Width="197"
							BorderBrush="{x:Null}">
							<TextBlock
								Name="SearchResult"
								FontFamily="/AutoKkutu;component/Resources/Font/#NanumBarunGothic"
								FontSize="11"
								Foreground="#FFFFFFFF"
								TextWrapping="Wrap"
								VerticalAlignment="Center">총 112개의 단어 중, 30개 고려 27ms 소요. (한방 단어 사용)</TextBlock>
						</Border>
					</Grid>
					<Button
						Name="DBManager"
						Content="데이터베이스 관리자"
						Grid.Column="0"
						Margin="0,731,0,41"
						FontFamily="/AutoKkutu;component/Resources/Font/#NanumBarunGothic"
						FontSize="14"
						Click="DBManager_Click" />
					<Button
						Name="About"
						Content="정보"
						Grid.Column="0"
						Margin="0,772,0,0"
						FontFamily="/AutoKkutu;component/Resources/Font/#NanumBarunGothic"
						FontSize="14" />
					<Grid
						Margin="10,466,4,179"
						Background="#FF333337">
						<CheckBox
							Name="Automode"
							Content="자동 단어 입력 활성화"
							HorizontalAlignment="Left"
							Height="18"
							Margin="6,12,0,0"
							VerticalAlignment="Top"
							Width="168"
							FontFamily="/AutoKkutu;component/Resources/Font/#NanumBarunGothic"
							Foreground="#FFFFFFFF"
							FontSize="14" />
						<Label
							Content="자동으로 가장 적절한 단어를 입력합니다."
							FontFamily="/AutoKkutu;component/Resources/Font/#NanumBarunGothic"
							Foreground="#FFBDBDBD"
							Margin="5,27,12,112" />
						<CheckBox
							Name="EndWord"
							Content="한 방 단어 우선"
							HorizontalAlignment="Left"
							Height="16"
							Margin="6,58,0,0"
							VerticalAlignment="Top"
							Width="168"
							FontFamily="/AutoKkutu;component/Resources/Font/#NanumBarunGothic"
							Foreground="#FFFFFFFF"
							FontSize="14" />
						<CheckBox
							Name="AutoDBUpdate"
							Content="데이터베이스 자동 업데이트"
							HorizontalAlignment="Left"
							Height="16"
							Margin="6,104,0,0"
							VerticalAlignment="Top"
							Width="202"
							FontFamily="/AutoKkutu;component/Resources/Font/#NanumBarunGothic"
							Foreground="#FFFFFFFF"
							FontSize="14"
							IsChecked="True"
							RenderTransformOrigin="0.482,1.656" />
						<Label
							Content="한 방 단어를 우선적으로 사용합니다."
							FontFamily="/AutoKkutu;component/Resources/Font/#NanumBarunGothic"
							Foreground="#FFBDBDBD"
							Margin="5,73,5,66" />
						<Label
							Content="이전 게임에서 제시된 단어를 기반으로,&#xD;&#xA;자동으로 데이터베이스를 업데이트 합니다."
							FontFamily="/AutoKkutu;component/Resources/Font/#NanumBarunGothic"
							FontSize="12"
							Foreground="#FFBDBDBD"
							Margin="-1,122,2,6" />
					</Grid>
					<Label
						Content="옵션"
						Foreground="#FFFFFFFF"
						FontFamily="/AutoKkutu;component/Resources/Font/#NanumBarunGothic"
						FontSize="20"
						Margin="10,433,38,341" />
				</Grid>
				<Grid
					Row="1"
					Column="0"
					Background="#252526">
					<Button
						Name="Submit"
						Content="전송"
						Grid.Column="0"
						Margin="41,13,1233,14"
						IsDefault="True"
						FontFamily="/AutoKkutu;component/Resources/Font/#NanumBarunGothic"
						FontSize="14"
						Click="Submit_Click" />
					<Button
						Name="ClipboardSubmit"
						Grid.Column="0"
						Margin="12,13,1309,14"
						IsCancel="True"
						FontFamily="/AutoKkutu;component/Resources/Font/#NanumBarunGothic"
						FontSize="14"
						Click="ClipboardSubmit_Click">
					</Button>
					<TextBox
						Name="TextInput"
						Margin="117,13,656,14"
						Background="#333337"
						Foreground="#FFFFFFFF"
						FontFamily="/AutoKkutu;component/Resources/Font/#NanumBarunGothic"
						FontSize="16"
						VerticalContentAlignment="Center"
						BorderBrush="#434346"
						Padding="5,0,10,0"
						GotFocus="TextInput_GotFocus"
						LostFocus="TextInput_LostFocus" />
					<Label
						Name="VersionLabel"
						Content="VersionInfomation"
						Foreground="#FFFFFFFF"
						FontFamily="/AutoKkutu;component/Resources/Font/#NanumBarunGothic"
						FontSize="14"
						Margin="0,4,12,0"
						RenderOptions.ClearTypeHint="Enabled"
						RenderOptions.EdgeMode="Aliased"
						Height="24"
						VerticalAlignment="Top"
						HorizontalAlignment="Right"
						Width="235"
						HorizontalContentAlignment="Right" />
					<Label
						Name="DBStatus"
						Content="DBStatus"
						Foreground="#FFFFFFFF"
						FontFamily="/AutoKkutu;component/Resources/Font/#NanumBarunGothic"
						FontSize="14"
						Margin="-81,25,12,0"
						RenderOptions.ClearTypeHint="Enabled"
						RenderOptions.EdgeMode="Aliased"
						Height="30"
						VerticalAlignment="Top"
						HorizontalAlignment="Right"
						Width="319"
						HorizontalContentAlignment="Right" />
				</Grid>
				<Grid
					Row="1"
					Column="1"
					Background="#252526">
				</Grid>
			</Grid>
			<Grid
				Name="StatusGrid"
				Row="1"
				Background="#FF797979">
				<Grid.ColumnDefinitions>
					<ColumnDefinition/>
					<ColumnDefinition Width="319*"/>
				</Grid.ColumnDefinitions>
				<Label
					Name="StatusLabel"
					FontFamily="NanumGothic"
					FontSize="12"
					Foreground="#FFFFFFFF"
					Content="CurrentStatusLabel"
					Margin="10,-5,-20,0" Grid.Column="1" />
			</Grid>
		</Grid>
	</Grid>
</Window>
